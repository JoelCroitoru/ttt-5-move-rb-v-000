#!/usr/bin/env ruby

require_relative '../lib/move.rb'

puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
" #{board[0]} | #{board[1]} | #{board[2]} "
"-----------"
" #{board[3]} | #{board[4]} | #{board[5]} "
"-----------"
" #{board[6]} | #{board[7]} | #{board[8]} "
puts "Where would you like to go?"
number = gets.strip
move(board, number)
display_board(board)
